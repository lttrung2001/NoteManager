<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/note_container_corner_8dp"
    android:layout_margin="8dp">
    <TextView
        android:id="@+id/note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/note_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/note_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:text="@string/app_name"/>
    <ImageView
        android:id="@+id/btn_edit_note"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="@id/note_title"
        app:layout_constraintBottom_toBottomOf="@id/note_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="@string/app_name" />
</androidx.constraintlayout.widget.ConstraintLayout>